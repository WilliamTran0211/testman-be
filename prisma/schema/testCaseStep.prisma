model TestStep {
    id           Int            @id
    TestCaseStep TestCaseStep[]

    @@map("test_steps")
}

model TestCase {
    id           Int            @id
    TestCaseStep TestCaseStep[]

    @@map("test_cases")
}

model TestCaseStep {
    testCaseId Int
    stepId     Int
    testCase   TestCase @relation(fields: [testCaseId], references: [id])
    step       TestStep @relation(fields: [stepId], references: [id])
    assignedAt DateTime @default(now())

    @@id([testCaseId, stepId])
    @@map("test_case_steps")
}
