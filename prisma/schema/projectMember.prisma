model User {
    id       Int             @id
    projects ProjectMember[]
}

model Project {
    id      Int             @id
    members ProjectMember[]
}

model ProjectMember {
    project    Project  @relation(fields: [projectId], references: [id])
    projectId  Int
    user       User     @relation(fields: [userId], references: [id])
    userId     Int
    assignedAt DateTime @default(now())
    assignedBy String

    @@id([projectId, userId])
    @@map("project_members")
}
